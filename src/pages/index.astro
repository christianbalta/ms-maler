---
import Layout from '../layouts/Layout.astro';
import Hero from "../sections/Hero.astro";
---

<Layout title="MS Maler Winterthur - Malerarbeiten">
  <Hero
      tagline="Turning houses into a dream"
      imageSrc="/images/hero-interior.jpg"
      imageAlt="Luxury modern interior design"
  />

  <!-- Additional content sections can go here -->
  <section class="py-20 px-6 md:px-12 lg:px-16 bg-white">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-4xl font-light text-center mb-8">Unsere Dienstleistungen</h2>
      <p class="text-center text-gray-600 max-w-3xl mx-auto">
        Von einfachen Streicharbeiten über Umbauten bis hin zu Komplettrenovationen -
        wir bieten alle Malerarbeiten mit höchster Qualität und Präzision.
      </p>
    </div>
  </section>
</Layout>
