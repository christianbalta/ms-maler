---
interface GalleryItem {
  id: string;
  title: string;
  category: string;
  imageUrl: string;
  description?: string;
}

const galleryItems: GalleryItem[] = [
  {
    id: "1",
    title: "Moderne Wohnzimmergestaltung",
    category: "Innenraum",
    imageUrl: "/images/gallery/living-room.jpg",
    description: "Elegante Farbkombination in Grautönen"
  },
  {
    id: "2",
    title: "Fassadenrenovation Altstadt",
    category: "Fassade",
    imageUrl: "/images/gallery/facade-1.jpg",
    description: "Historische Fassade fachgerecht renoviert"
  },
  {
    id: "3",
    title: "Büroräume Winterthur",
    category: "Gewerbe",
    imageUrl: "/images/gallery/office.jpg",
    description: "Professionelle Gestaltung für produktive Arbeitsumgebung"
  },
  {
    id: "4",
    title: "Kinderzimmer Traumwelt",
    category: "Innenraum",
    imageUrl: "/images/gallery/kids-room.jpg",
    description: "Kreative Wandgestaltung mit Motivmalerei"
  },
  {
    id: "5",
    title: "Restaurant Innenausbau",
    category: "Gewerbe",
    imageUrl: "/images/gallery/restaurant.jpg",
    description: "Atmosphärische Raumgestaltung für Gastronomie"
  },
  {
    id: "6",
    title: "Villa Aussenfassade",
    category: "Fassade",
    imageUrl: "/images/gallery/villa.jpg",
    description: "Komplette Fassadensanierung mit Wärmedämmung"
  }
];

const categories = ["Alle", "Innenraum", "Fassade", "Gewerbe"];
---

<section class="py-20 sm:py-24 bg-[var(--color-accent)]" data-animate id="portfolio">
  <div class="container mx-auto max-w-7xl px-4 sm:px-6">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-12">
      <p class="text-xs tracking-[0.18em] text-[var(--color-professional)] font-medium uppercase mb-3">
        Portfolio
      </p>
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-gray-900 leading-tight mb-5">
        Unsere Referenzprojekte
      </h2>
      <p class="text-lg text-gray-600">
        Lassen Sie sich von unseren abgeschlossenen Projekten inspirieren.
      </p>
    </div>

    <!-- Filter buttons -->
    <div class="flex flex-wrap justify-center gap-3 mb-12">
      {categories.map((category) => (
          <button
              class={`gallery-filter px-6 py-2 rounded-full font-medium transition-all duration-300 focus-ring ${
                  category === "Alle"
                      ? "bg-gray-900 text-white"
                      : "bg-white text-gray-700 hover:bg-gray-100"
              }`}
              data-category={category}
              aria-label={`Filter nach ${category}`}
          >
            {category}
          </button>
      ))}
    </div>

    <!-- Gallery grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="galleryGrid">
      {galleryItems.map((item, index) => (
          <article
              class="gallery-item group relative overflow-hidden rounded-2xl bg-white shadow-lg hover:shadow-2xl transition-all duration-300 cursor-pointer"
              data-category={item.category}
              style={`animation-delay: ${index * 50}ms`}
          >
            <!-- Image container -->
            <div class="aspect-[4/3] overflow-hidden bg-gray-200">
              <div
                  class="w-full h-full bg-cover bg-center transform group-hover:scale-110 transition-transform duration-700"
                  style={`background-image: url('${item.imageUrl}');`}
                  role="img"
                  aria-label={item.title}
              >
                {/* Placeholder for actual image - replace with Image component in production */}
                <div class="w-full h-full bg-gradient-to-br from-gray-300 to-gray-400"></div>
              </div>
            </div>

            <!-- Overlay content -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
              <span class="inline-block px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full text-xs font-medium text-white mb-3">
                {item.category}
              </span>
                <h3 class="text-xl font-bold text-white mb-2">
                  {item.title}
                </h3>
                {item.description && (
                    <p class="text-white/90 text-sm">
                      {item.description}
                    </p>
                )}
              </div>
            </div>

            <!-- Quick view button -->
            <button
                class="absolute top-4 right-4 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transform scale-0 group-hover:scale-100 transition-all duration-300"
                aria-label={`${item.title} vergrössern`}
            >
              <svg class="w-5 h-5 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
              </svg>
            </button>
          </article>
      ))}
    </div>

    <!-- View more button -->
    <div class="text-center mt-12">
      <a
          href="/portfolio"
          class="inline-flex items-center justify-center px-8 py-3 rounded-full bg-gray-900 text-white font-medium hover:bg-black transition-colors focus-ring"
          aria-label="Alle Projekte ansehen"
      >
        <span>Alle Projekte ansehen</span>
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  // Gallery filter functionality
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.gallery-filter');
    const galleryItems = document.querySelectorAll('.gallery-item');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const category = button.getAttribute('data-category');

        // Update active button
        filterButtons.forEach(btn => {
          btn.classList.remove('bg-gray-900', 'text-white');
          btn.classList.add('bg-white', 'text-gray-700');
        });
        button.classList.remove('bg-white', 'text-gray-700');
        button.classList.add('bg-gray-900', 'text-white');

        // Filter items
        galleryItems.forEach(item => {
          const itemCategory = item.getAttribute('data-category');

          if (category === 'Alle' || itemCategory === category) {
            (item as HTMLElement).style.display = 'block';
            item.classList.add('animate-scale-in');
          } else {
            (item as HTMLElement).style.display = 'none';
            item.classList.remove('animate-scale-in');
          }
        });
      });
    });
  });
</script>