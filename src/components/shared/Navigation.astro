---
import {Image} from 'astro:assets';
import logoMsMaler from '../../assets/images/logo-ms-maler.png';
---

<!-- Navigation Header with White Background -->
<header class="nav-header bg-white relative z-30">
  <nav class="flex items-center justify-between px-6 py-4 md:px-12 lg:px-24 xl:px-32">
    <!-- Logo -->
    <div class="logo">
      <a href="/" class="block hover:opacity-80 transition-opacity" aria-label="MS Maler Home">
        <Image
            src={logoMsMaler}
            alt="MS Maler Logo"
            class="h-8 md:h-9 w-auto"/>
      </a>
    </div>

    <!-- Desktop Navigation -->
    <ul class="hidden md:flex items-center space-x-8 lg:space-x-12">
      <li><a href="/"
             class="nav-link text-gray-700 hover:text-gray-900 transition-colors duration-300 text-sm uppercase tracking-wide">Home</a>
      </li>
      <li><a href="/services" id="servicesTrigger"
             class="nav-link text-gray-700 hover:text-gray-900 transition-colors duration-300 text-sm uppercase tracking-wide">Services</a>
      </li>
      <li><a href="/portfolio"
             class="nav-link text-gray-700 hover:text-gray-900 transition-colors duration-300 text-sm uppercase tracking-wide">Projekte</a>
      </li>
      <li><a href="/referenzen"
             class="nav-link text-gray-700 hover:text-gray-900 transition-colors duration-300 text-sm uppercase tracking-wide">Referenzen</a>
      </li>
      <li><a href="/kontakt"
             class="nav-link text-gray-700 hover:text-gray-900 transition-colors duration-300 text-sm uppercase tracking-wide">Kontakt</a>
      </li>
    </ul>

    <!-- Mobile Menu Button -->
    <button id="mobileMenuButton" class="md:hidden text-gray-700 p-2" aria-label="Menü öffnen" aria-controls="mobileMenu" aria-expanded="false">
      <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </nav>
</header>

<!-- Mobile Navigation Overlay -->
<div id="mobileMenu" class="md:hidden fixed inset-0 z-40 hidden" aria-hidden="true">
  <!-- Backdrop -->
  <div id="mobileMenuBackdrop" class="absolute inset-0 bg-black/50 opacity-0 transition-opacity duration-200 ease-out"></div>
  <!-- Drawer -->
  <div id="mobileMenuPanel" class="absolute right-0 top-0 h-full w-80 max-w-[85%] bg-white shadow-2xl transition-transform duration-300 ease-out flex flex-col z-10" style="transform: translateX(100%)">
    <div class="flex items-center justify-between px-5 py-4 border-b">
      <div class="flex items-center gap-3">
        <Image src={logoMsMaler} alt="MS Maler Logo" class="h-7 w-auto" />
      </div>
      <button id="mobileMenuClose" class="p-2 text-gray-600 hover:text-black" aria-label="Menü schliessen">
        <i class="fa-solid fa-xmark text-xl"></i>
      </button>
    </div>

    <nav class="flex-1 overflow-y-auto">
      <ul class="px-5 py-4 space-y-2">
        <li><a href="/" class="block px-3 py-3 rounded-lg text-gray-800 hover:bg-gray-100 text-sm uppercase tracking-wide">Home</a></li>
        <li>
          <button id="mobileServicesToggle" class="w-full flex items-center justify-between px-3 py-3 rounded-lg text-gray-800 hover:bg-gray-100 text-sm uppercase tracking-wide text-left">
            <span>Services</span>
            <i class="fa-solid fa-chevron-down transition-transform duration-200" id="mobileServicesChevron"></i>
          </button>
          <ul id="mobileServicesList" class="hidden mt-1 ml-3 space-y-1">
            <li><a href="/services/malerarbeiten" class="block px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-50 text-xs">Malerarbeiten</a></li>
            <li><a href="/services/farbberatung" class="block px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-50 text-xs">Farbberatung / Farbkonzepte</a></li>
            <li><a href="/services/spritzarbeiten" class="block px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-50 text-xs">Spritzarbeiten</a></li>
            <li><a href="/services/fassaden-aussenarbeiten" class="block px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-50 text-xs">Fassaden- & Aussenarbeiten</a></li>
          </ul>
        </li>
        <li><a href="/portfolio" class="block px-3 py-3 rounded-lg text-gray-800 hover:bg-gray-100 text-sm uppercase tracking-wide">Projekte</a></li>
        <li><a href="/referenzen" class="block px-3 py-3 rounded-lg text-gray-800 hover:bg-gray-100 text-sm uppercase tracking-wide">Referenzen</a></li>
        <li><a href="/kontakt" class="block px-3 py-3 rounded-lg text-gray-800 hover:bg-gray-100 text-sm uppercase tracking-wide">Kontakt</a></li>
      </ul>
    </nav>

    <div class="px-5 py-4 border-t">
      <div class="flex items-center gap-4 text-gray-600">
        <a href="#" aria-label="Instagram" class="hover:text-black transition-colors"><i class="fab fa-instagram text-xl"></i></a>
        <a href="#" aria-label="Facebook" class="hover:text-black transition-colors"><i class="fab fa-facebook text-xl"></i></a>
        <a href="#" aria-label="LinkedIn" class="hover:text-black transition-colors"><i class="fab fa-linkedin text-xl"></i></a>
      </div>
    </div>
  </div>
</div>

<div id="servicesOverlay" class="services-overlay" aria-hidden="true">
  <div class="services-overlay__inner">
    <div class="panel-left">

    </div>
    <div class="panel-right">
      <nav class="services-menu" aria-label="Service navigation">
        <ul class="services-list">
          <li class="service-item">
            <a href="/services/malerarbeiten" class="service-link">
              <span class="service-icon" aria-hidden="true">
                <i class="fa-solid fa-paint-roller"></i>
              </span>
              <span class="service-text">
                <span class="service-title">Malerarbeiten</span>
                <span class="service-desc">Innen- und Renovationsarbeiten in höchster Qualität.</span>
              </span>
              <span class="service-arrow" aria-hidden="true">
                <i class="fa-solid fa-arrow-right"></i>
              </span>
            </a>
          </li>
          <li class="service-item">
            <a href="/services/farbberatung" class="service-link">
              <span class="service-icon" aria-hidden="true">
                <i class="fa-solid fa-palette"></i>
              </span>
              <span class="service-text">
                <span class="service-title">Farbberatung / Farbkonzepte</span>
                <span class="service-desc">Individuelle Farbkonzepte für Räume und Fassaden.</span>
              </span>
              <span class="service-arrow" aria-hidden="true">
                <i class="fa-solid fa-arrow-right"></i>
              </span>
            </a>
          </li>
          <li class="service-item">
            <a href="/services/spritzarbeiten" class="service-link">
              <span class="service-icon" aria-hidden="true">
                <i class="fa-solid fa-spray-can-sparkles"></i>
              </span>
              <span class="service-text">
                <span class="service-title">Spritzarbeiten</span>
                <span class="service-desc">Effiziente und gleichmässige Oberflächenbeschichtung.</span>
              </span>
              <span class="service-arrow" aria-hidden="true">
                <i class="fa-solid fa-arrow-right"></i>
              </span>
            </a>
          </li>
          <li class="service-item">
            <a href="/services/fassaden-aussenarbeiten" class="service-link">
              <span class="service-icon" aria-hidden="true">
                <i class="fa-solid fa-city"></i>
              </span>
              <span class="service-text">
                <span class="service-title">Fassaden- & Aussenarbeiten</span>
                <span class="service-desc">Schutz und Gestaltung für die Aussenseite Ihrer Immobilie.</span>
              </span>
              <span class="service-arrow" aria-hidden="true">
                <i class="fa-solid fa-arrow-right"></i>
              </span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</div>

<script>
  // Place all overlay logic here to keep behavior encapsulated with the nav
  const header = document.querySelector('.nav-header');
  const trigger = document.getElementById('servicesTrigger');
  const overlay = document.getElementById('servicesOverlay');
  const inner = overlay?.querySelector('.services-overlay__inner');
  const panelLeft = overlay?.querySelector('.panel-left');
  const panelRight = overlay?.querySelector('.panel-right');

  function positionOverlay() {
    if (!header || !overlay || !inner) return;
    const rect = header.getBoundingClientRect();
    overlay.style.top = rect.bottom + 'px';
    overlay.style.height = `calc(100vh - ${rect.bottom}px)`;
  }

  let hideTimer;

  function showOverlay() {
    if (!overlay) return;
    positionOverlay();
    overlay.classList.add('is-open');
    overlay.setAttribute('aria-hidden', 'false');
  }

  function scheduleHide() {
    clearTimeout(hideTimer);
    hideTimer = setTimeout(() => {
      overlay.classList.remove('is-open');
      overlay.setAttribute('aria-hidden', 'true');
    }, 120);
  }

  function hideNow() {
    clearTimeout(hideTimer);
    overlay.classList.remove('is-open');
    overlay.setAttribute('aria-hidden', 'true');
  }

  function cancelHide() {
    clearTimeout(hideTimer);
  }

  if (trigger && overlay) {
    ['mouseenter', 'focus'].forEach(evt => trigger.addEventListener(evt, showOverlay));
    ['mouseleave', 'blur'].forEach(evt => trigger.addEventListener(evt, scheduleHide));

    if (panelRight) {
      panelRight.addEventListener('mouseenter', cancelHide);
      panelRight.addEventListener('mouseleave', scheduleHide);
    }

    if (panelLeft) {
      panelLeft.addEventListener('mouseenter', hideNow);
    }

    window.addEventListener('resize', positionOverlay);
    window.addEventListener('scroll', positionOverlay, {passive: true});
  }

  // Mobile menu logic
  const mobileBtn = document.getElementById('mobileMenuButton');
  const mobileMenu = document.getElementById('mobileMenu');
  const mobilePanel = document.getElementById('mobileMenuPanel');
  const mobileBackdrop = document.getElementById('mobileMenuBackdrop');
  const mobileClose = document.getElementById('mobileMenuClose');

  function openMobileMenu() {
    if (!mobileMenu || !mobilePanel || !mobileBackdrop) return;
    mobileMenu.classList.remove('hidden');
    mobileMenu.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
    requestAnimationFrame(() => {
      requestAnimationFrame(() => {
        mobileBackdrop.style.opacity = '1';
        mobilePanel.style.transform = 'translateX(0)';
      });
    });
    mobileBtn?.setAttribute('aria-expanded', 'true');
  }

  function closeMobileMenu() {
    if (!mobileMenu || !mobilePanel || !mobileBackdrop) return;
    mobileBackdrop.style.opacity = '0';
    mobilePanel.style.transform = 'translateX(100%)';
    setTimeout(() => {
      mobileMenu.classList.add('hidden');
      mobileMenu.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
      mobileBtn?.setAttribute('aria-expanded', 'false');
    }, 300);
  }

  mobileBtn?.addEventListener('click', openMobileMenu);
  mobileClose?.addEventListener('click', closeMobileMenu);
  mobileBackdrop?.addEventListener('click', closeMobileMenu);
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && mobileMenu && !mobileMenu.classList.contains('hidden')) {
      closeMobileMenu();
    }
  });

  // Close mobile menu when a link is clicked
  if (mobileMenu) {
    mobileMenu.querySelectorAll('a').forEach(a => a.addEventListener('click', closeMobileMenu));
  }

  // Mobile services submenu toggle
  const mobileServicesToggle = document.getElementById('mobileServicesToggle');
  const mobileServicesList = document.getElementById('mobileServicesList');
  const mobileServicesChevron = document.getElementById('mobileServicesChevron');

  mobileServicesToggle?.addEventListener('click', () => {
    const isHidden = mobileServicesList?.classList.contains('hidden');
    if (isHidden) {
      mobileServicesList?.classList.remove('hidden');
      mobileServicesChevron?.classList.add('rotate-180');
    } else {
      mobileServicesList?.classList.add('hidden');
      mobileServicesChevron?.classList.remove('rotate-180');
    }
  });
</script>

<style>
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .nav-header {
    opacity: 0;
    animation: slideDown 0.6s ease-out forwards;
  }

  .nav-link {
    position: relative;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: currentColor;
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .logo a {
    font-size: 1.5rem;
    letter-spacing: 0.1em;
    font-weight: 300;
  }

  .services-overlay {
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 0;
    opacity: 0;
    pointer-events: none;
    transition: opacity 200ms ease;
    z-index: 20;
  }

  .services-overlay.is-open {
    opacity: 1;
    pointer-events: auto;
  }

  .services-overlay__inner {
    width: 100%;
    height: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .services-overlay .panel-left {
    background: rgba(0, 0, 0, 0.06);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    opacity: 0;
    animation: overlayIn 240ms ease 40ms forwards;
  }

  .services-overlay.is-open .panel-left {
    animation: overlayIn 240ms ease forwards;
  }

  .services-overlay .panel-right {
    background: rgba(12, 18, 22, 0.96);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
    transform: translateY(-6px);
    opacity: 0;
    animation: overlayIn 240ms ease forwards;
  }

  @keyframes overlayIn {
    from {
      opacity: 0;
      transform: translateY(-6px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .services-menu {
    height: 100%;
    overflow-y: auto;
  }

  .services-list {
    list-style: none;
    margin: 0;
    padding: 48px 32px;
    display: flex;
    flex-direction: column;
    gap: 18px;
  }

  .service-item {
  }

  .service-link {
    display: grid;
    grid-template-columns: 48px 1fr 28px;
    align-items: center;
    gap: 16px;
    padding: 16px 14px;
    border-radius: 12px;
    color: #e9edf1;
    text-decoration: none;
    transition: background-color 180ms ease, color 180ms ease;
  }

  .service-link:hover {
    background: rgba(255, 255, 255, 0.06);
  }

  .service-icon {
    width: 48px;
    height: 48px;
    border-radius: 9999px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.06);
    color: #d6dadf;
  }

  .service-icon i {
    font-size: 20px;
    line-height: 1;
    display: inline-block;
  }

  .service-text {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .service-title {
    font-size: 1.125rem;
    line-height: 1.4;
    color: #f6d8a6;
  }

  .service-desc {
    font-size: 0.9375rem;
    line-height: 1.5;
    color: #b5c1c9;
    opacity: 0.85;
  }

  .service-arrow {
    width: 28px;
    height: 28px;
    color: #f6d8a6;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transform: translateX(-6px);
    transition: opacity 180ms ease, transform 180ms ease;
  }

  .service-link:hover .service-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .service-arrow i {
    font-size: 16px;
    line-height: 1;
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .nav-header {
      animation: none;
      opacity: 1;
      transform: none;
    }

    .services-overlay {
      transition: none;
    }

    .services-overlay .panel-left,
    .services-overlay .panel-right {
      animation: none;
      opacity: 1;
      transform: none;
    }

    .service-link {
      transition: none;
    }

    .service-arrow {
      transition: none;
    }
  }
</style>
