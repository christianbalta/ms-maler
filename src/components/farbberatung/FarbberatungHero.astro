---
export interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Farbberatung / Farbkonzepte",
  subtitle = "Farbkonzepte für Unternehmen, Büros und Gewerbeflächen"
} = Astro.props;
---

<section
    class="relative min-h-[70vh] flex items-center justify-center overflow-hidden py-12 sm:py-0"
    aria-label="Hero Farbberatung"
>
  <div class="absolute inset-0 z-0">

    <!-- Gradient overlay for better text readability -->
    <div class="absolute inset-0 bg-gradient-to-br from-accent via-gray-100/70 to-accent"></div>

    <!-- Additional animated gradient overlay for visual interest -->
    <div class="absolute inset-0 bg-gradient-to-t from-accent via-transparent to-transparent"></div>
  </div>
  <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="max-w-4xl mx-auto">
      <div
          class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-black/10 backdrop-blur-sm border border-black/20 mb-6">
        <i class="fa-solid fa-palette text-[var(--color-paint-accent)]"></i>
        <span
            class="text-primary-dark text-sm font-medium">Winterthur & Umgebung • Gewerbekunden</span>
      </div>

      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-primary-dark mb-6">
        {title}
        <span class="block text-3xl sm:text-4xl md:text-5xl mt-3">{subtitle}</span>
      </h1>

      <p class="text-lg sm:text-xl text-black/80 mb-10 max-w-2xl mx-auto">
        Farben wirken – auf Mitarbeitende, Kundschaft und Markenwahrnehmung. Wir entwickeln
        harmonische, funktionsorientierte Farbkonzepte nach Farbpsychologie und aktuellen Trends.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#kontakt"
           class="inline-flex items-center justify-center px-8 py-4 rounded-full bg-white text-gray-900 font-semibold hover:bg-gray-100 transition-all focus-ring">
          <span>Kostenlose Erstberatung</span>
          <i class="fa-solid fa-arrow-right ml-2"></i>
        </a>
        <a href="#portfolio"
           class="inline-flex items-center justify-center px-8 py-4 rounded-full border-2 border-black/30 text-gray-900 font-semibold hover:bg-black/10 transition-all focus-ring">
          <i class="fa-regular fa-images mr-2"></i>
          <span>Referenzen ansehen</span>
        </a>
      </div>

      <div class="mt-12 grid grid-cols-1 sm:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="text-3xl font-bold text-gray-900">20+</div>
          <div class="text-sm text-gray-700 mt-1">Jahre Erfahrung</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-gray-900">100%</div>
          <div class="text-sm text-gray-700 mt-1">Qualitätsgarantie</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-gray-900">48h</div>
          <div class="text-sm text-gray-700 mt-1">Offerte & Termin</div>
        </div>
      </div>
    </div>
  </div>
</section>
