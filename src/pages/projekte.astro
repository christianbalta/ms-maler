---

<Layout title={pageTitle} description={pageDescription}>
  <Navigation/>

  <!-- Page Hero -->
  <section class="relative bg-gradient-to-b from-white to-gray-50">
    <div class="mx-auto max-w-7xl px-6 md:px-12 lg:px-16 py-16 md:py-24">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-gray-900">
          Unsere Projekte
        </h1>
        <p class="mt-6 text-lg md:text-xl text-gray-600 leading-relaxed max-w-3xl mx-auto">
          Mit Stolz präsentieren wir eine Auswahl unserer erfolgreich abgeschlossenen Projekte.
          Von anspruchsvollen Gewerbebauten über komplexe Renovationen bis hin zu präzisen
          Fassadenarbeiten – Qualität und Zuverlässigkeit stehen bei uns an erster Stelle.
        </p>
        <div class="mt-8 flex flex-wrap items-center justify-center gap-6 text-sm text-gray-600">
          <div class="flex items-center gap-2">
            <i class="fa-solid fa-building text-[var(--color-paint-blue)]"></i>
            <span>19+ Referenzprojekte</span>
          </div>
          <div class="flex items-center gap-2">
            <i class="fa-solid fa-certificate text-[var(--color-paint-blue)]"></i>
            <span>Zertifizierte Qualität</span>
          </div>
          <div class="flex items-center gap-2">
            <i class="fa-solid fa-users text-[var(--color-paint-blue)]"></i>
            <span>Zufriedene Kunden</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="bg-white py-16 md:py-20">
    <div class="mx-auto max-w-7xl px-6 md:px-12 lg:px-16">
      <div class="mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900">Referenzprojekte</h2>
        <p class="mt-3 text-gray-600">
          Eine Auswahl unserer Partnerschaften und erfolgreich realisierten Projekte
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {projects.map((project) => (
            <div
                class="group relative bg-white rounded-xl border border-gray-200 p-6 hover:shadow-xl hover:border-gray-300 transition-all duration-300 hover:-translate-y-1">
              <div class="flex items-start justify-between gap-4">
                <div class="flex-1">
                  <h3 class="text-lg font-semibold text-gray-900 group-hover:text-[var(--color-paint-blue)] transition-colors">
                    {project.name}
                  </h3>
                  <span
                      class="inline-block mt-3 px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
                  {project.category}
                </span>
                </div>
              </div>
              <div class="mt-4 pt-4 border-t border-gray-100">
                <div class="flex items-center gap-2 text-sm text-gray-500">
                  <i class="fa-solid fa-check-circle text-green-500"></i>
                  <span>Projekt abgeschlossen</span>
                </div>
              </div>
            </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Image Gallery Section -->
  <section class="bg-gray-50 py-16 md:py-20">
    <div class="mx-auto max-w-7xl px-6 md:px-12 lg:px-16">
      <div class="mb-12 text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900">Galerie</h2>
        <p class="mt-3 text-gray-600 max-w-2xl mx-auto">
          Einblicke in unsere Arbeit – von der Vorbereitung bis zum perfekten Finish
        </p>
      </div>

      <!-- Gallery Grid -->
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
        {galleryImages.map((item, index) => (
            <a
                href={item.image.src}
                class="glightbox group relative overflow-hidden rounded-lg bg-gray-200 aspect-square hover:shadow-lg transition-all duration-300"
                data-gallery="gallery1"
                data-title={item.alt}
            >
              <Image
                  src={item.image}
                  width={400}
                  height={400}
                  alt={item.alt}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading={index < 4 ? "eager" : "lazy"}
              />

              <div
                  class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
                <div class="absolute bottom-4 left-4 right-4 text-white">
                  <i class="fa-solid fa-expand text-xl"></i>
                </div>
              </div>
            </a>
        ))}
      </div>
    </div>
  </section>


  <CTA/>
  <Footer/>
</Layout>

<style>
  /* Custom hover effects for gallery items */
  @media (hover: hover) {
    .group:hover .fa-expand {
      animation: pulse 0.5s ease-in-out;
    }
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }
</style>

<!-- Add GLightbox CSS and JS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css"/>
<script>
  import GLightbox from 'glightbox';

  // Initialize GLightbox
  const lightbox = GLightbox({
    touchNavigation: true,
    loop: true,
    autoplayVideos: true,
    zoomable: true,
    draggable: true,
    closeOnOutsideClick: true,
    selector: '.glightbox'
  });
</script>
