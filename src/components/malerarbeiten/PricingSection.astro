---
interface PricingFeature {
  included: boolean;
  text: string;
}

interface PricingPlan {
  name: string;
  description: string;
  priceRange: string;
  unit: string;
  features: PricingFeature[];
  highlighted?: boolean;
}

const pricingPlans: PricingPlan[] = [
  {
    name: "Basis",
    description: "Einfache Malerarbeiten",
    priceRange: "35-45",
    unit: "CHF/m²",
    features: [
      { included: true, text: "Wandanstrich (1-2 Farben)" },
      { included: true, text: "Grundierung bei Bedarf" },
      { included: true, text: "Abdeckarbeiten" },
      { included: true, text: "Endreinigung" },
      { included: false, text: "Spachteltechniken" },
      { included: false, text: "Dekorative Elemente" }
    ]
  },
  {
    name: "Premium",
    description: "Komplette Raumgestaltung",
    priceRange: "55-75",
    unit: "CHF/m²",
    features: [
      { included: true, text: "Alle Basis-Leistungen" },
      { included: true, text: "Farbberatung inklusive" },
      { included: true, text: "Spachteltechniken" },
      { included: true, text: "Mehrfarbige Gestaltung" },
      { included: true, text: "Kleine Reparaturen" },
      { included: true, text: "Premium-Farben" }
    ],
    highlighted: true
  },
  {
    name: "Individuell",
    description: "Massgeschneiderte Lösungen",
    priceRange: "Auf Anfrage",
    unit: "",
    features: [
      { included: true, text: "Alle Premium-Leistungen" },
      { included: true, text: "Spezialeffekte & Techniken" },
      { included: true, text: "Vergoldungen & Stuckaturen" },
      { included: true, text: "Projektmanagement" },
      { included: true, text: "Flexibles Timing" },
      { included: true, text: "Garantieverlängerung" }
    ]
  }
];
---

<section class="py-20 sm:py-24 bg-white" data-animate>
  <div class="container mx-auto max-w-7xl px-4 sm:px-6">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <p class="text-xs tracking-[0.18em] text-[var(--color-professional)] font-medium uppercase mb-3">
        Preise
      </p>
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-gray-900 leading-tight mb-5">
        Transparente Preisgestaltung
      </h2>
      <p class="text-lg text-gray-600">
        Faire Preise ohne versteckte Kosten. Wählen Sie das passende Paket für Ihr Projekt.
      </p>
    </div>

    <!-- Pricing cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {pricingPlans.map((plan, index) => (
          <div
              class={`relative rounded-2xl p-8 transition-all duration-300 hover:transform hover:scale-105 ${
                  plan.highlighted
                      ? "bg-gradient-to-br from-gray-900 to-gray-800 text-white shadow-2xl"
                      : "bg-white border-2 border-gray-200 hover:border-gray-300"
              }`}
              style={`animation-delay: ${index * 100}ms`}
          >
            {/* Popular badge */}
            {plan.highlighted && (
                <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
              <span class="inline-block px-4 py-1 bg-[var(--color-paint-accent)] text-gray-900 rounded-full text-sm font-bold">
                BELIEBT
              </span>
                </div>
            )}

            {/* Plan header */}
            <div class="mb-6">
              <h3 class={`text-2xl font-bold mb-2 ${plan.highlighted ? "text-white" : "text-gray-900"}`}>
                {plan.name}
              </h3>
              <p class={`text-sm ${plan.highlighted ? "text-white/80" : "text-gray-600"}`}>
                {plan.description}
              </p>
            </div>

            {/* Price */}
            <div class="mb-6">
              <div class="flex items-baseline gap-2">
              <span class={`text-3xl md:text-4xl font-bold ${plan.highlighted ? "text-white" : "text-gray-900"}`}>
                {plan.priceRange}
              </span>
                {plan.unit && (
                    <span class={`text-sm ${plan.highlighted ? "text-white/70" : "text-gray-500"}`}>
                  {plan.unit}
                </span>
                )}
              </div>
            </div>

            {/* Features */}
            <ul class="space-y-3 mb-8" role="list">
              {plan.features.map((feature) => (
                  <li class="flex items-start gap-3">
                    {feature.included ? (
                        <svg class={`w-5 h-5 flex-shrink-0 mt-0.5 ${plan.highlighted ? "text-[var(--color-paint-accent)]" : "text-green-500"}`} fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                    ) : (
                        <svg class={`w-5 h-5 flex-shrink-0 mt-0.5 ${plan.highlighted ? "text-white/30" : "text-gray-300"}`} fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                    )}
                    <span class={`text-sm ${
                        feature.included
                            ? (plan.highlighted ? "text-white" : "text-gray-700")
                            : (plan.highlighted ? "text-white/40 line-through" : "text-gray-400 line-through")
                    }`}>
                  {feature.text}
                </span>
                  </li>
              ))}
            </ul>

            {/* CTA button */}
            <a
                href="#kontakt"
                class={`block text-center px-6 py-3 rounded-full font-medium transition-colors focus-ring ${
                    plan.highlighted
                        ? "bg-white text-gray-900 hover:bg-gray-100"
                        : "bg-gray-900 text-white hover:bg-black"
                }`}
                aria-label={`${plan.name} Paket anfragen`}
            >
              Angebot anfragen
            </a>
          </div>
      ))}
    </div>

    {/* Additional info */}
    <div class="mt-16 bg-[var(--color-accent)] rounded-2xl p-8 md:p-10">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">
            Wichtige Informationen zu unseren Preisen
          </h3>
          <ul class="space-y-3 text-gray-700" role="list">
            <li class="flex items-start gap-3">
              <i class="fas fa-info-circle text-[var(--color-paint-blue)] mt-1" aria-hidden="true"></i>
              <span>Alle Preise verstehen sich inklusive Material und MwSt.</span>
            </li>
            <li class="flex items-start gap-3">
              <i class="fas fa-info-circle text-[var(--color-paint-blue)] mt-1" aria-hidden="true"></i>
              <span>Kostenlose Besichtigung und Offerte für alle Projekte</span>
            </li>
            <li class="flex items-start gap-3">
              <i class="fas fa-info-circle text-[var(--color-paint-blue)] mt-1" aria-hidden="true"></i>
              <span>Festpreisgarantie nach Auftragserteilung</span>
            </li>
            <li class="flex items-start gap-3">
              <i class="fas fa-info-circle text-[var(--color-paint-blue)] mt-1" aria-hidden="true"></i>
              <span>Rabatte für Grossprojekte und Stammkunden möglich</span>
            </li>
          </ul>
        </div>
        <div class="text-center md:text-right">
          <p class="text-gray-700 mb-4">
            Haben Sie Fragen zu unseren Preisen?
          </p>
          <a
            href="tel:+41XXXXXXXXX"
            class="inline-flex items-center justify-center px-6 py-3 rounded-full bg-gray-900 text-white font-medium hover:bg-black transition-colors focus-ring"
            aria-label="Beratung vereinbaren"
          >
            <i class="fas fa-phone mr-2" aria-hidden="true"></i>
            Kostenlose Beratung
          </a>
        </div>
      </div>
    </div>
  </div>
</section>