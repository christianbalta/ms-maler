---
import {Image, getImage} from 'astro:assets';

export interface GalleryItem {
  id: string | number;
  title: string;
  category: string;
  image: any;
  alt?: string;
  description?: string;
}

export interface ServiceGalleryProps {
  eyebrow?: string;
  title: string;
  subtitle?: string;
  categories?: string[];
  items: GalleryItem[];
  viewMoreHref?: string;
  viewMoreLabel?: string;
}

const {
  eyebrow = 'Portfolio',
  title,
  subtitle,
  items,
  viewMoreHref,
  viewMoreLabel = 'Alle Projekte ansehen'
} = Astro.props as ServiceGalleryProps;

// Generate WebP hrefs for lightbox so full-size opens as WebP too
const webpLinks = await Promise.all(
    items.map(async (item) => {
      try {
        const result = await getImage({
          src: item.image,
          width: item.image.width ?? 1920,
          format: 'webp'
        });
        return result.src;
      } catch (e) {
        // Fallback to original src if transformation fails
        return item.image.src;
      }
    })
);
---

<section class="py-20 sm:py-24 bg-[var(--color-accent)]" data-animate id="portfolio">
  <div class="container mx-auto max-w-7xl px-4 sm:px-6">
    <div class="text-center max-w-3xl mx-auto mb-12">
      <p class="text-xs tracking-[0.18em] text-[var(--color-professional)] font-medium uppercase mb-3">{eyebrow}</p>
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-gray-900 leading-tight mb-5">{title}</h2>
      {subtitle && (<p class="text-lg text-gray-600">{subtitle}</p>)}
    </div>


    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="galleryGrid">
      {items.map((item, index) => (
          <a
              href={webpLinks[index]}
              class="glightbox gallery-item group relative overflow-hidden rounded-2xl bg-white shadow-lg hover:shadow-2xl transition-all duration-300 cursor-pointer"
              data-category={item.category}
              data-gallery="service-gallery"
              data-title={item.title}
              style={`animation-delay: ${index * 50}ms`}
              aria-label={`${item.title} vergrÃ¶ssern`}>
            <div class="aspect-[4/3] overflow-hidden bg-gray-200">
              <Image
                  src={item.image}
                  width={400}
                  height={300}
                  alt={item.alt ?? item.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading={index < 4 ? 'eager' : 'lazy'}
              />
            </div>
            <div
                class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div
                  class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                <span
                    class="inline-block px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full text-xs font-medium text-white mb-3">{item.category}</span>
                <h3 class="text-xl font-bold text-white mb-2">{item.title}</h3>
                {item.description && (<p class="text-white/90 text-sm">{item.description}</p>)}
              </div>
            </div>
            <div
                class="absolute top-4 right-4 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transform scale-0 group-hover:scale-100 transition-all duration-300"
                aria-hidden="true">
              <svg class="w-5 h-5 text-gray-900" fill="none" stroke="currentColor"
                   viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
              </svg>
            </div>
          </a>
      ))}
    </div>

    {viewMoreHref && (
        <div class="text-center mt-12">
          <a href={viewMoreHref}
             class="inline-flex items-center justify-center px-8 py-3 rounded-full bg-gray-900 text-white font-medium hover:bg-black transition-colors focus-ring"
             aria-label={viewMoreLabel}>
            <span>{viewMoreLabel}</span>
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
    )}
  </div>
</section>


<!-- GLightbox assets for gallery lightbox -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css"/>
<script>
  import GLightbox from 'glightbox';
  // Initialize GLightbox for items in this component
  const __initServiceGalleryLightbox = () => {
    try {
      // Avoid double-initialization if script runs multiple times
      if (typeof window !== 'undefined' && !(window).__serviceGalleryLightbox) {
        (window).__serviceGalleryLightbox = GLightbox({
          selector: '.glightbox',
          touchNavigation: true,
          loop: true,
          autoplayVideos: true,
          zoomable: true,
          draggable: true,
          closeOnOutsideClick: true
        });
      }
    } catch (e) {
      // no-op: GLightbox optional
    }
  };
  __initServiceGalleryLightbox();
</script>
