---
interface ProcessStep {
  number: string;
  title: string;
  description: string;
  icon: string;
  duration?: string;
}

const processSteps: ProcessStep[] = [
  {
    number: "01",
    title: "Kontaktaufnahme",
    description: "Nehmen Sie Kontakt mit uns auf - per Telefon, E-Mail oder über unser Kontaktformular.",
    icon: "fa-phone",
    duration: "Sofort"
  },
  {
    number: "02",
    title: "Beratung & Besichtigung",
    description: "Wir besichtigen Ihr Objekt und beraten Sie zu Farben, Materialien und Techniken.",
    icon: "fa-clipboard-check",
    duration: "1-2 Tage"
  },
  {
    number: "03",
    title: "Offerte",
    description: "Sie erhalten eine detaillierte, transparente Offerte mit Festpreisgarantie.",
    icon: "fa-file-invoice",
    duration: "24-48h"
  },
  {
    number: "04",
    title: "Terminplanung",
    description: "Nach Auftragserteilung planen wir gemeinsam den optimalen Zeitpunkt für die Arbeiten.",
    icon: "fa-calendar-check",
    duration: "Flexibel"
  },
  {
    number: "05",
    title: "Ausführung",
    description: "Professionelle und saubere Ausführung aller vereinbarten Malerarbeiten.",
    icon: "fa-paint-brush",
    duration: "Nach Vereinbarung"
  },
  {
    number: "06",
    title: "Qualitätskontrolle",
    description: "Gemeinsame Abnahme und Sicherstellung Ihrer vollsten Zufriedenheit.",
    icon: "fa-award",
    duration: "Am Ende"
  }
];
---

<section class="py-20 sm:py-24 bg-[var(--color-accent)]" data-animate>
  <div class="container mx-auto max-w-7xl px-4 sm:px-6">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <p class="text-xs tracking-[0.18em] text-[var(--color-professional)] font-medium uppercase mb-3">
        Unser Prozess
      </p>
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-gray-900 leading-tight mb-5">
        Schritt für Schritt zu Ihrem Wunschprojekt
      </h2>
      <p class="text-lg text-gray-600">
        Ein strukturierter Ablauf garantiert beste Ergebnisse und zufriedene Kunden.
      </p>
    </div>

    <!-- Process steps -->
    <div class="relative">
      <!-- Connection line (hidden on mobile) -->
      <div class="hidden lg:block absolute top-1/2 left-0 right-0 h-0.5 bg-gray-300 -translate-y-1/2"></div>

      <!-- Steps grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-y-12">
        {processSteps.map((step, index) => (
            <div
                class="relative group"
                style={`animation-delay: ${index * 100}ms`}
            >
              <!-- Card -->
              <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 relative z-10">
                <!-- Step number -->
                <div class="absolute -top-4 -right-4 w-12 h-12 bg-primary-dark rounded-full flex items-center justify-center text-white font-bold text-sm shadow-lg">
                  {step.number}
                </div>

                <!-- Icon -->
                <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
                  <i class={`fas ${step.icon} text-2xl text-primary-dark`} aria-hidden="true"></i>
                </div>

                <!-- Content -->
                <h3 class="text-xl font-bold text-gray-900 mb-2">
                  {step.title}
                </h3>
                <p class="text-gray-600 text-sm mb-3">
                  {step.description}
                </p>

                {/* Duration badge */}
                {step.duration && (
                    <div class="inline-flex items-center gap-1 px-3 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium">
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                      </svg>
                      <span>{step.duration}</span>
                    </div>
                )}
              </div>
            </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  /* Add staggered animation for process cards */
  @media (min-width: 768px) {
    [data-animate] .group {
      opacity: 0;
      animation: fadeInScale 0.5s ease-out forwards;
    }
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>