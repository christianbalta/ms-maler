<!-- Navigation Header with White Background -->
<header class="nav-header bg-white relative z-30">
  <nav class="flex items-center justify-between px-6 py-4 md:px-12 lg:px-24 xl:px-32">
    <!-- Logo -->
    <div class="logo">
      <a href="/" class="text-gray-900 text-2xl font-light tracking-wider hover:opacity-70 transition-opacity">
        MS MALER
      </a>
    </div>

    <!-- Desktop Navigation -->
    <ul class="hidden md:flex items-center space-x-8 lg:space-x-12">
      <li><a href="/" class="nav-link text-gray-700 hover:text-gray-900 transition-colors duration-300 text-sm uppercase tracking-wide">Home</a></li>
      <li><a href="/pages" class="nav-link text-gray-700 hover:text-gray-900 transition-colors duration-300 text-sm uppercase tracking-wide">Pages</a></li>
      <li><a href="/portfolio" class="nav-link text-gray-700 hover:text-gray-900 transition-colors duration-300 text-sm uppercase tracking-wide">Portfolio</a></li>
      <li><a href="/blog" class="nav-link text-gray-700 hover:text-gray-900 transition-colors duration-300 text-sm uppercase tracking-wide">Blog</a></li>
      <li><a href="/shop" class="nav-link text-gray-700 hover:text-gray-900 transition-colors duration-300 text-sm uppercase tracking-wide">Shop</a></li>
      <li><a href="/contact" class="nav-link text-gray-700 hover:text-gray-900 transition-colors duration-300 text-sm uppercase tracking-wide">Contact</a></li>
    </ul>

    <!-- Mobile Menu Button -->
    <button class="md:hidden text-gray-700 p-2" aria-label="Menu">
