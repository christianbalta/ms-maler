<style>
  /* Custom animations for hero section */
  @keyframes heroImageZoom {
    from {
      transform: scale(1);
    }
    to {
      transform: scale(1.1);
    }
  }

  @keyframes fadeSlideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Apply animations on load */
  .hero-image {
    animation: heroImageZoom 2s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    transform-origin: center center;
  }

  .text-overlay {
    opacity: 0;
    animation: fadeSlideUp 0.8s ease-out 2s forwards;
  }

  /* Navigation animation */
  .nav-header {
    opacity: 0;
    animation: slideDown 0.6s ease-out forwards;
  }

  /* Social sidebar animation */
  .social-sidebar {
    opacity: 0;
    animation: fadeIn 0.6s ease-out 0.3s forwards;
  }

  /* Mobile social links animation */
  .social-links-mobile {
    opacity: 0;
    animation: fadeSlideUp 0.6s ease-out 2.5s forwards;
  }

  /* Social link animations with staggered delay */
  .social-link {
    opacity: 0;
    animation: fadeSlideUp 0.6s ease-out forwards;
  }

  .social-link:nth-child(1) {
    animation-delay: 0.5s;
  }

  .social-link:nth-child(2) {
    animation-delay: 0.7s;
  }

  .social-link:nth-child(3) {
    animation-delay: 0.9s;
  }

  .social-link:nth-child(4) {
    animation-delay: 1.1s;
  }

  /* Responsive tagline font size using clamp */
  .tagline {
    font-size: clamp(2rem, 5vw, 4rem);
    line-height: 1.1;
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .hero-image,
    .text-overlay,
    .nav-header,
    .social-sidebar,
    .social-link,
    .social-links-mobile {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .text-overlay {
      left: 0;
      right: 0;
      bottom: 0;
      padding: 2rem;
      background: linear-gradient(to top, rgba(0,0,0,0.9), rgba(0,0,0,0.7));
    }

    .tagline {
      font-size: clamp(1.75rem, 6vw, 2.5rem);
    }
  }

  /* Hover effects for interactive elements */
  .nav-link {
    position: relative;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: currentColor;
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  /* Logo styling */
  .logo a {
    font-size: 1.5rem;
    letter-spacing: 0.1em;
    font-weight: 300;
  }

  /* Social link hover effect */
  .social-link {
    transition: transform 0.3s ease;
  }

  .social-link:hover {
    transform: translateX(2px);
  }

  /* Vertical text rotation */
  .vertical-text {
    writing-mode: vertical-rl;
    transform: rotate(180deg);
    font-size: 0.65rem;
    font-weight: 500;
  }

  /* Nav header styling */
  .nav-header {
    border-bottom: 1px solid #f0f0f0;
  }
</style>

