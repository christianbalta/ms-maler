---
import {Image} from 'astro:assets';
import malerArbeiten from '../../assets/images/gallery/Treppenhaus_mit_schwarzer_Wendeltreppe.jpg'
import farbberatung from '../../assets/images/farbberatung-service.jpeg'
import spritzen from '../../assets/images/spritzarbeiten-service.webp'
import fassade from '../../assets/images/gallery/Industriehalle_Aussenfassade_Winterthur.jpeg'

const services = [
  {
    title: 'Malerarbeiten',
    desc:
      'Professionelle Malerarbeiten für Innen- und Aussenbereiche. Sauber, termingerecht und mit Qualitätsgarantie.',
    img: malerArbeiten,
    link: '/services/malerarbeiten',
  },
  {
    title: 'Farbberatung / Farbkonzepte',
    desc:
      'Professionelle Farbberatung für harmonische Räume. Individuelle Konzepte für Innen und Aussen.',
    img: farbberatung,
    link: '/services/farbberatung',
  },
  {
    title: 'Spritzarbeiten',
    desc:
      'Effiziente und gleichmässige Beschichtungen für grosse Flächen – ideal für Gewerbeobjekte in Winterthur und Umgebung.',
    img: spritzen,
    link: '/services/spritzarbeiten',
  },
  {
    title: 'Fassaden- & Aussenarbeiten',
    desc:
        'Schützende und repräsentative Fassadengestaltung für langlebige Ergebnisse.',
    img: fassade,
    link: '/services/fassaden-und-aussenarbeiten',
  }
];
---

<section class="bg-white/90 py-20 sm:py-24">
  <div class="container mx-auto max-w-8xl px-4 text-center">
    <h1 class="mt-3 text-3xl sm:text-4xl md:text-5xl font-extrabold text-black leading-tight">
      Maler Winterthur
    </h1>

    <div class="mt-14 grid gap-10 sm:gap-12 md:gap-14 grid-cols-1 md:grid-cols-4">
      {services.map((s) => (
        <article class="group relative flex flex-col items-center text-center pb-16 cursor-pointer">
          <a href={s.link} aria-label={`Mehr über ${s.title}`} class="relative mx-auto size-40 sm:size-48 md:size-56 rounded-full overflow-hidden duration-300 block">
            <Image src={s.img} alt={s.title} width={400} height={400} loading="lazy" class="w-full h-full object-cover transition-transform duration-300 ease-out group-hover:scale-105" />
          </a>

          <h2 class="mt-2 text-xl sm:text-2xl font-bold text-gray-900">{s.title}</h2>
          <p class="mt-3 max-w-[28ch] sm:max-w-[36ch] text-gray-500">
            {s.desc}
          </p>

          <a href={s.link} aria-label={`Mehr über ${s.title}`}
             class="absolute bottom-0 left-1/2 -translate-x-1/2 inline-flex items-center justify-center size-11 rounded-full border border-gray-300 text-gray-700 hover:bg-gray-900 hover:text-white group-hover:bg-gray-900 group-hover:text-white transition-colors">
            →
          </a>
        </article>
      ))}
    </div>
  </div>
</section>
