---
export interface ProcessStep {
  number: string;
  title: string;
  description: string;
  icon: string;
  duration?: string;
}

export interface WorkProcessProps {
  eyebrow?: string;
  title: string;
  subtitle?: string;
  steps: ProcessStep[];
}

const { eyebrow = 'Unser Prozess', title, subtitle, steps } = Astro.props as WorkProcessProps;
---

<section class="py-20 sm:py-24 bg-[var(--color-accent)]" data-animate>
  <div class="container mx-auto max-w-7xl px-4 sm:px-6">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <p class="text-xs tracking-[0.18em] text-[var(--color-professional)] font-medium uppercase mb-3">{eyebrow}</p>
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-gray-900 leading-tight mb-5">{title}</h2>
      {subtitle && (<p class="text-lg text-gray-600">{subtitle}</p>)}
    </div>

    <div class="relative">

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-y-12 items-stretch">
        {steps.map((step, index) => (
          <div class="relative group h-full" style={`animation-delay: ${index * 100}ms`}>
            <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 relative z-10 h-full flex flex-col">
              <div class="absolute -top-4 -right-4 w-12 h-12 bg-primary-dark rounded-full flex items-center justify-center text-white font-bold text-sm shadow-lg">{step.number}</div>
              <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
                <i class={`fas ${step.icon} text-2xl text-primary-dark`} aria-hidden="true"></i>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">{step.title}</h3>
              <p class="text-gray-600 text-sm mb-3 flex-1">{step.description}</p>
              {step.duration && (
                <div class="inline-flex self-start items-center gap-1 px-3 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium mt-auto">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                  </svg>
                  <span>{step.duration}</span>
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  @media (min-width: 768px) {
    [data-animate] .group {
      opacity: 0;
      animation: fadeInScale 0.5s ease-out forwards;
    }
  }
  @keyframes fadeInScale {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
  }
</style>
